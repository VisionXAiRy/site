<label class="flex items-center cursor-pointer gap-2">
    <!-- Sun icon -->
    <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <circle cx="12" cy="12" r="5"></circle>
        <path
            d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"
        ></path>
    </svg>

    <!-- The toggle -->
    <input
        type="checkbox"
        class="toggle toggle-primary theme-controller"
        aria-label="Toggle dark mode"
    />

    <!-- Moon icon -->
    <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
</label>

<script class="hidden" type="module">
    const html = document.documentElement;
    const toggle = document.querySelector(".theme-controller");
    const mq = window.matchMedia("(prefers-color-scheme: dark)");
    
    // Apply initial theme
    const saved = localStorage.getItem("theme");
    if (saved === "dark" || saved === "light") {
        html.setAttribute("data-theme", saved);
        toggle.checked = saved === "dark";
    } else {
        // no choice saved â†’ use system
        const systemDark = mq.matches;
        html.setAttribute("data-theme", systemDark ? "dark" : "light");
        toggle.checked = systemDark;
    }

    // Listen for system changes when there's no override
    mq.addEventListener("change", (e) => {
        if (!localStorage.getItem("theme")) {
            html.setAttribute("data-theme", e.matches ? "dark" : "light");
            toggle.checked = e.matches;
        }
    });

    // User toggles
    toggle.addEventListener("change", () => {
        const isDark = toggle.checked;
        html.setAttribute("data-theme", isDark ? "dark" : "light");
        localStorage.setItem("theme", isDark ? "dark" : "light");
    });
</script>